// Copy to Firebase Console > Firestore > Rules (or firestore.rules if using CLI)
// This allows each user to read/write only their own preferences document.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
